{
  "name": "youtube-vj-2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --apply src/",
    "format": "biome format src/",
    "format:write": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --apply src/",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-youtube": "^10.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check --write",
      "biome lint --write",
      "tsc --noEmit --skipLibCheck"
    ],
    "*.{json,md,css,html}": [
      "biome format --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'echo \"🔍 TypeScript型チェック中...\"'"
    ]
  }
}
